{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyRegions",
      "Effect": "Deny",
      "NotAction": [
        "aoss:*",
        "acm:*",
        "aws-marketplace:*",
        "chime:*",
        "cloudfront:*",
        "directconnect:*",
        "iam:*",
        "organizations:*",
        "route53:*",
        "s3:GetAccountPublicAccessBlock",
        "s3:GetBucketLocation",
        "s3:ListAllMyBuckets",
        "s3:ListJobs",
        "s3:ListMultiRegionAccessPoints",
        "sts:*",
        "support:*"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "aws:RequestedRegion":   ${allowed_regions}
        }
      }
    }
  ]
}