{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Allow CloudTrail to use the key",
      "Effect": "Allow",
      "Principal": {
        "Service": "cloudtrail.amazonaws.com"
      },
      "Action": [
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:DescribeKey"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "kms:EncryptionContext:aws:cloudtrail:arn": "arn:aws:cloudtrail:eu-west-2:${log_archive_account_id}:trail/${trail_name}"
        }
      }
    },
    {
      "Sid": "Allow log archive root",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::${log_archive_account_id}:root"
      },
      "Action": "kms:*",
      "Resource": "*"
    }
  ]
}
